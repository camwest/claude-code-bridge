{
  "name": "@claude/bridge",
  "version": "0.1.0",
  "description": "CLI bridge for remote Claude Code execution",
  "main": "dist/index.js",
  "bin": {
    "claude-bridge": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "build:binary": "pkg dist/index.js --out-path ../../dist",
    "lint": "eslint src --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@claude-code-mobile/bridge-protocol": "workspace:*",
    "@claude-code-mobile/claude-sdk": "workspace:*",
    "@claude-code-mobile/supabase": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@claude-code-mobile/typescript-config": "workspace:*",
    "@claude-code-mobile/eslint-config": "workspace:*",
    "@types/node": "^22.15.3",
    "tsx": "^4.7.0",
    "typescript": "5.8.2",
    "pkg": "^5.8.1"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [],
    "targets": [
      "node18-macos-x64",
      "node18-linux-x64", 
      "node18-win-x64"
    ]
  }
}